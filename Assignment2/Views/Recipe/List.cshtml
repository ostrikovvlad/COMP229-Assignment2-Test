@model RecipeListViewModel

<div class="w3-content" style="max-width:1100px">
    <div class="w3-row w3-padding-64" id="menu">
        <div class="w3-col l6 w3-padding-large">
            <h1 class="w3-center">Our Menu</h1><br>
            @foreach (var r in Model.Recipes)
            {
                @Html.Partial("RecipeSummary", r)
            }
        </div>
        <div page-model="@Model.PagingInfo" 
        page-action="List" page-classes-enabled="true"
        page-class="btn"
        page-class-normal="w3-btn"
        page-class-selected="w3-disabled">

        </div>
        <div class="w3-col l6 w3-padding-large">
            <img src="~/images/tablesetting.jpg" class="w3-round w3-image w3-opacity-min" alt="Menu" style="width:100%">
        </div>
    </div>
</div>